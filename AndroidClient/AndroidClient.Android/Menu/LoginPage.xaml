<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AndroidClient.Droid.Menu.LoginPage">
    <ContentPage.Content>
        <RelativeLayout>

            <Grid VerticalOptions="StartAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="1.4*"></RowDefinition>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Text="In order to use all features of application you must log in:)"
                    Margin="20,20,20,40"
                    VerticalOptions="StartAndExpand" 
                    HorizontalOptions="CenterAndExpand" />
                <Button Grid.Row="1" Text="Log in" VerticalOptions="CenterAndExpand" Margin="20,50,20,5"
                        BackgroundColor="#ccffff"></Button>
                <Button Grid.Row="2" Text="Sign in" VerticalOptions="CenterAndExpand" Margin="20,5,20,20"
                        BackgroundColor="#ccffff"></Button>
            </Grid>
            
        </RelativeLayout>
    </ContentPage.Content>
</ContentPage>